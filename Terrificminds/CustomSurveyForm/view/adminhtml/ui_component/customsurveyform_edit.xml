<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
   <argument name="data" xsi:type="array">
      <item name="js_config" xsi:type="array">
         <item name="provider" xsi:type="string">customsurveyform_edit.customsurveyform_edit_data_source</item>
         <item name="deps" xsi:type="string">customsurveyform_edit.customsurveyform_edit_data_source</item>
      </item>
      <item name="label" xsi:type="string" translate="true">General Information</item>
      <item name="config" xsi:type="array">
         <item name="dataScope" xsi:type="string">data</item>
         <item name="namespace" xsi:type="string">customsurveyform_edit</item>
      </item>
      <item name="spinner" xsi:type="string">general_information</item>
      <item name="buttons" xsi:type="array">
         <item name="back" xsi:type="string">
            Terrificminds\CustomSurveyForm\Block\Adminhtml\Index\Edit\Button\Back
         </item>
         <item name="save" xsi:type="string">Terrificminds\CustomSurveyForm\Block\Adminhtml\Index\Edit\Button\Save</item>
      </item>
      <item name="template" xsi:type="string">templates/form/collapsible</item>
   </argument>
   <dataSource name="customsurveyform_edit_data_source">
      <argument name="dataProvider" xsi:type="configurableObject">
         <argument name="class" xsi:type="string">Terrificminds\CustomSurveyForm\Model\DataProvider</argument>
         <argument name="name" xsi:type="string">customsurveyform_edit_data_source</argument>
         <argument name="primaryFieldName" xsi:type="string">id</argument>
         <argument name="requestFieldName" xsi:type="string">id</argument>
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="submit_url" xsi:type="url" path="*/*/save" />
            </item>
         </argument>
      </argument>
      <argument name="data" xsi:type="array">
         <item name="js_config" xsi:type="array">
            <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
         </item>
      </argument>
   </dataSource>
   <fieldset name="general_information">
      <argument name="data" xsi:type="array">
         <item name="config" xsi:type="array">
            <item name="collapsible" xsi:type="boolean">false</item>
            <item name="label" xsi:type="string" translate="true">General Information</item>
            <item name="sortOrder" xsi:type="number">20</item>
         </item>
      </argument>
      
      <field name="customer_name">
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="dataType" xsi:type="string">text</item>
               <item name="label" xsi:type="string" translate="true">Customer name</item>
               <item name="formElement" xsi:type="string">input</item>
               <item name="source" xsi:type="string">customer_name</item>
               <item name="dataScope" xsi:type="string">customer_name</item>
            </item>
         </argument>
      </field>
      <field name="email">
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="dataType" xsi:type="string">text</item>
               <item name="label" xsi:type="string" translate="true">email</item>
               <item name="formElement" xsi:type="string">input</item>
               <item name="source" xsi:type="string">email</item>
               <item name="dataScope" xsi:type="string">email</item>
            </item>
         </argument>
      </field>
      <field name="qn1">
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="dataType" xsi:type="string">text</item>
               <item name="label" xsi:type="string" translate="true">Question No 1</item>
               <item name="formElement" xsi:type="string">input</item>
               <item name="source" xsi:type="string">qn1</item>
               <item name="dataScope" xsi:type="string">qn1</item>
            </item>
         </argument>
      </field>
        <field name="qn2">
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="dataType" xsi:type="string">int</item>
               <item name="label" xsi:type="string" translate="true">Question No 2</item>
               <item name="formElement" xsi:type="string">input</item>
               <item name="source" xsi:type="string">qn2</item>
               <item name="dataScope" xsi:type="string">qn2</item>
            </item>
         </argument>
      </field>
       <field name="qn3">
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="dataType" xsi:type="string">text</item>
               <item name="label" xsi:type="string" translate="true">Question No 3</item>
               <item name="formElement" xsi:type="string">textarea</item>
               <item name="source" xsi:type="string">qn3</item>
               <item name="dataScope" xsi:type="string">qn3</item>
            </item>
         </argument>
      </field>
      <field name="qn4">
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="dataType" xsi:type="string">int</item>
               <item name="label" xsi:type="string" translate="true">Question 4</item>
               <item name="formElement" xsi:type="string">input</item>
               <item name="source" xsi:type="string">qn4</item>
               <item name="dataScope" xsi:type="string">qn4</item>
            </item>
         </argument>
      </field>
      <field name="qn5">
         <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
               <item name="dataType" xsi:type="string">int</item>
               <item name="label" xsi:type="string" translate="true">Question 5</item>
               <item name="formElement" xsi:type="string">input</item>
               <item name="source" xsi:type="string">qn5</item>
               <item name="dataScope" xsi:type="string">qn5</item>
            </item>
         </argument>
      </field>
   </fieldset>
</form>