<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="custom_survey_table" resource="default" engine="innodb" comment="Feedback Form">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="customer_name" nullable="false" length="25" comment="customer_name"/>
        <column xsi:type="varchar" name="email" nullable="false" length="25" comment="Email"/>
        <column xsi:type="varchar" name="qn1" nullable="false" length="255" comment="qn1"/>
        <column xsi:type="varchar" name="qn2" nullable="false" length="255" comment="qn2"/>
        <column xsi:type="varchar" name="qn3" nullable="false" length="255" comment="qn3"/>
        <column xsi:type="varchar" name="qn4" nullable="false" length="255" comment="qn4"/>
        <column xsi:type="varchar" name="qn5" nullable="false" length="255" comment="qn5"/>
        <column xsi:type="text" name="image" nullable="true"  comment="image Upload"/>
        <column xsi:type="timestamp" name="created_at" nullable="true" default="CURRENT_TIMESTAMP" on_update="false" comment="Created Datetime"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated Datetime"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>