<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
     <default>
        <terrificminds>
           <general>
                <enable>1</enable>
           </general>
         </terrificminds>
     </default>
     <default>
        <customer>
            <captcha>
                <shown_to_logged_in_user>
                    <custom_survey_form>1</custom_survey_form>
                </shown_to_logged_in_user>
                <always_for>
                    <custom_survey_form>1</custom_survey_form>
                </always_for>
            </captcha>
        </customer>
        <captcha translate="label">
            <frontend>
                <areas>
                    <custom_survey_form>
                        <label>Custom Survey Form</label>
                    </custom_survey_form>
                </areas>
            </frontend>
        </captcha>
    </default>
</config>